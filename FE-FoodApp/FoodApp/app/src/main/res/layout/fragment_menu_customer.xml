<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment_Customer.Menu_Fragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6E5E5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textSize="35dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="150dp"/>

            <ImageView
                android:id="@+id/img_phone"
                android:src="@drawable/icphone"
                android:layout_width="33dp"
                android:layout_height="30dp"
                android:layout_marginLeft="67dp"/>

            <ImageView
                android:id="@+id/img_cart"
                android:src="@drawable/iccart"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                />


        </LinearLayout>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/sv_foods"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/shape_search"
            android:iconifiedByDefault="false"
            app:queryHint="Seacrch foods"
            />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabSelectedTextColor="#DE3905"
            android:background="@drawable/vie_bg"
            android:layout_marginTop="16dp"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/paperMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>





</FrameLayout>